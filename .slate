# This is the default .slate file.
# If no ~/.slate file exists this is the file that will be used.

config defaultToCurrentScreen true
config nudgePercentOf screenSize
config resizePercentOf screenSize

# Maximize Binding
bind space:ctrl;alt;cmd   corner top-left resize:screenSizeX;screenSizeY

# Push Bindings
bind right:ctrl;alt;cmd   push right bar-resize:screenSizeX/2
bind left:ctrl;alt;cmd    push left  bar-resize:screenSizeX/2
bind up:ctrl;alt;cmd      push up    bar-resize:screenSizeY/2
bind down:ctrl;alt;cmd    push down  bar-resize:screenSizeY/2

# Throw Bindings
bind 1:ctrl;alt;cmd       throw 0 resize
bind 2:ctrl;alt;cmd       throw 1 resize
bind 3:ctrl;alt;cmd       throw 2 resize
bind n:ctrl;alt;cmd       throw next resize

# Focus Bindings
# bind right:ctrl;alt            focus right
# bind left:ctrl;alt             focus left
# bind up:ctrl;alt               focus up
# bind down:ctrl;alt             focus down
# bind up:cmd;alt           focus behind
# bind down:cmd;alt         focus behind

# Grid
bind g:ctrl;alt;cmd       grid 

# Window Hints
bind esc:cmd              hint

# Undo
# bind u:ctrl;alt;cmd       undo

# Switched
# bind tab:cmd              switch